@model YoelProject.ViewModel.Login.LoginViewModel

@using (Html.BeginForm("Index", "Login", new { @returnUrl = HttpContext.Current.Request.QueryString["returnUrl"] != null ? HttpContext.Current.Request.QueryString["returnUrl"].ToString() : "" }, FormMethod.Post, new { @id = "loginForm", role = "form", autocomplete = "off" }))
{
    @Html.HiddenFor(model => model.RedirectURL)
    @Html.HiddenFor(model => model.ReturnAction)
    @Html.HiddenFor(model => model.ReturnController)
    @Html.HiddenFor(model => model.Msg)
    @Html.HiddenFor(model => model.ManageLoginPageVM.File)

    <div class="control-group normal_text"><h3>Report App Login</h3></div>
    <div class="control-group">
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on"><i class="icon-user"></i></span>
                @Html.TextBoxFor(model => model.UserName, new { id = "username", @class = "", tabindex = "3", autocomplete = "on", @placeholder = "Please Enter UserName." })
                <p class="required">@Html.ValidationMessageFor(model => model.UserName)</p>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on"><i class="icon-lock"></i></span>
                @Html.TextBoxFor(x => x.Password, new { type = "password", id = "password", @class = "", tabindex = "4", autocomplete = "on", @placeholder = "Please Enter Password." })
                <p class="required">@Html.ValidationMessageFor(model => model.Password)</p>                
            </div>
        </div>
    </div>
    <div class="form-actions">
